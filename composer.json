{
  "name": "jagermesh/bright",
  "type": "library",
  "description": "Reactive PHP/JavaScript Framework",
  "license": "MIT",
  "authors": [{
    "name": "Sergiy Lavryk",
    "email": "jagermesh@gmail.com"
  }],
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-dom": "*",
    "ext-xml": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "aws/aws-sdk-php": "^3",
    "guzzlehttp/guzzle": "^7",
    "cboden/ratchet": "^0.4",
    "ratchet/pawl": "^0.4",
    "phpseclib/phpseclib": "^2",
    "textalk/websocket": "^1",
    "mustache/mustache": "^2",
    "michelf/php-markdown": "^1",
    "longman/telegram-bot": "^0.75",
    "neitanod/forceutf8": "^2",
    "symfony/mailer": "^5",
    "phpoffice/phpspreadsheet": "^1"
  },
  "require-dev": {
    "codeception/codeception": "^4.1",
    "codeception/module-phpbrowser": "^1 || ^2",
    "codeception/module-asserts": "^1",
    "squizlabs/php_codesniffer": "^3",
    "symplify/easy-coding-standard": "^11.1",
    "rector/rector": "^0.14.3"
  },
  "scripts": {
    "hooks": ["rm -rf .git/hooks", "ln -s ../tools/git-hooks .git/hooks", "chmod +x .git/hooks/pre-commit", "chmod +x .git/hooks/prepare-commit-msg"]
  },
  "autoload": {
    "psr-4": {
      "Bright\\": "classes/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
